# ===========================================
# LAP - Configuração de Produção
# ===========================================
# COPIE ESTE ARQUIVO PARA .env E PREENCHA OS VALORES
# cp .env.production.example .env

# Database Configuration (OBRIGATÓRIO - ALTERE AS SENHAS!)
DB_USER=lap_user
DB_PASSWORD=ALTERE_ESTA_SENHA_FORTE_AQUI
DB_NAME=lap_db

# Security (OBRIGATÓRIO - GERE UMA CHAVE ÚNICA!)
# Gerar com: openssl rand -hex 32
SECRET_KEY=GERE_UMA_CHAVE_SECRETA_COM_OPENSSL

# API Configuration
API_URL=http://SEU_IP_OU_DOMINIO
API_WORKERS=4
DEBUG=false
LOG_LEVEL=WARNING

# PNCP API Configuration
PNCP_BASE_URL=https://pncp.gov.br/api/consulta/v1
PNCP_TIMEOUT=30
PNCP_MAX_RETRIES=3

# Scheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=America/Sao_Paulo
COLLECTION_TIMES=06:00,12:00,18:00,00:00

# Email Notifications (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@seudominio.com

# Telegram Configuration (opcional)
TELEGRAM_BOT_TOKEN=

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24

# Application Settings
APP_NAME=LAP - Licitações Aparecida Plus
APP_VERSION=1.0.0
